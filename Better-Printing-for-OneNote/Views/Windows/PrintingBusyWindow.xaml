<Window x:Class="Better_Printing_for_OneNote.Views.Windows.PrintingBusyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:resx="clr-namespace:Better_Printing_for_OneNote.Properties"
        mc:Ignorable="d"
        Title="{x:Static resx:Resources.ApplicationTitle}"
        Closing="Window_Closing"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">

    <toolkit:BusyIndicator BusyContent="Printing..."
                           IsBusy="True" />

</Window>
