<Window x:Class="Better_Printing_for_OneNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:controls="clr-namespace:Better_Printing_for_OneNote.Views.Controls"
        xmlns:resx="clr-namespace:Better_Printing_for_OneNote.Properties"
        mc:Ignorable="d"
        Title="{x:Static resx:Resources.ApplicationTitle}" MinHeight="450" MinWidth="800">

    <Window.TaskbarItemInfo>
        <TaskbarItemInfo ProgressState="{Binding WindowProgressState}"/>
    </Window.TaskbarItemInfo>

    <DockPanel>
        <Grid DockPanel.Dock="Top" Margin="12 12 12 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="4" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="4" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <toolkit:WatermarkTextBox Text="{Binding FilePath}" Watermark="Datei" Width="400" />
            <Button Content="Durchsuchen" Command="{Binding SearchFileCommand}" Grid.Column="2" />

            <toolkit:WatermarkTextBox Name="PrinterTb" Watermark="Drucker" Width="128" Grid.Column="4" />
            <Button x:Name="ChoosePrinterBtn" Content="Auswählen" Grid.Column="6" />

            <Button x:Name="PrintBtn" Content="Drucken" Grid.Column="8" />
        </Grid>

        <controls:InteractiveFixedDocumentViewer x:Name="MainIFDV" Margin="0 12 0 0" RenderPageNumbers="{Binding CropHelper.PageNumbersEnabled, Mode=OneWayToSource}" PageDeleteRequestedCommand="{Binding DeleteRequestHandler}" RedoRequestedCommand="{Binding RedoRequestHandler}" UndoRequestedCommand="{Binding UndoRequestHandler}" PageSplitRequestedCommand="{Binding SplitPageRequestHandler}" Document="{Binding CropHelper.Document}" Background="{StaticResource LightPrimary}" />
    </DockPanel>
</Window>
