<Window x:Class="Better_Printing_for_OneNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Better_Printing_for_OneNote"
        mc:Ignorable="d"
        Title="{StaticResource Title}" Height="450" Width="800">

    <Window.TaskbarItemInfo>
        <TaskbarItemInfo ProgressState="{Binding WindowProgressState}"/>
    </Window.TaskbarItemInfo>

    <Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Column="1">
                <Button Command="{Binding TestCommand}">TestButton</Button>
            </StackPanel>

            <DocumentViewer Grid.Row="1" Grid.ColumnSpan="2" Document="{Binding Document}"/>
        </Grid>
    </Border>
</Window>
