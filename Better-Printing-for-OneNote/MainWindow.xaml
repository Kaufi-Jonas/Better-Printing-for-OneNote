<Window x:Class="Better_Printing_for_OneNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:controls="clr-namespace:Better_Printing_for_OneNote.Views.Controls"
        xmlns:resx="clr-namespace:Better_Printing_for_OneNote.Properties"
        mc:Ignorable="d"
        Title="{x:Static resx:Resources.ApplicationTitle}" MinHeight="450" MinWidth="800">

    <DockPanel>
        <Grid DockPanel.Dock="Top" Margin="12 12 12 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="4" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="4" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="30" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="4" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <toolkit:WatermarkTextBox Text="{Binding FilePath}" Watermark="Datei" Width="700" IsReadOnly="True" Focusable="False"/>
            <Button Content="Durchsuchen" Command="{Binding SearchFileCommand}" Grid.Column="2" />

            <toolkit:WatermarkTextBox Watermark="Drucker" Width="200" Grid.Column="4" Text="{Binding PrintDialog.PrintQueue.Name}" IsReadOnly="True" Focusable="False"/>
            <Button Content="Auswählen" Grid.Column="6" Command="{Binding ChoosePrinterCommand}"/>

            <Button Content="Drucken" Grid.Column="8" Command="{Binding PrintCommand}"/>

            <CheckBox IsChecked="{Binding CropHelper.SignatureEnabled, Mode=TwoWay}" Grid.Column="10" VerticalAlignment="Center"/>
            <toolkit:WatermarkTextBox Watermark="Signatur" Width="200" Grid.Column="12" Text="{Binding CropHelper.Signature, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>

        <controls:InteractiveFixedDocumentViewer x:Name="MainIFDV" Margin="0 12 0 0" RenderPageNumbers="{Binding CropHelper.PageNumbersEnabled, Mode=TwoWay}" PageDeleteRequestedCommand="{Binding DeleteRequestHandler}" RedoRequestedCommand="{Binding RedoRequestHandler}" UndoRequestedCommand="{Binding UndoRequestHandler}" PageSplitRequestedCommand="{Binding SplitPageRequestHandler}" Document="{Binding CropHelper.Document}" Background="{StaticResource LightPrimary}" />
    </DockPanel>
</Window>
