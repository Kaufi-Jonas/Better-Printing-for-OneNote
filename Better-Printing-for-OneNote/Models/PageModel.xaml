<PageContent xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             xmlns:cropableImage="clr-namespace:WpfCropableImageControl;assembly=WpfCropableImageControl">

    <FixedPage Height="{Binding PageHeight}" Width="{Binding PageWidth}">
        <cropableImage:CropableImage Images="{Binding Images}" Skips="{Binding Skips}" Height="{Binding ContentHeight}" Width="{Binding ContentWidth}" Margin="{Binding ContentPadding}" CropHeight="{Binding CropHeight}" ShiftY="{Binding CropShift}" RenderOptions.BitmapScalingMode="HighQuality" />
    </FixedPage>

</PageContent>